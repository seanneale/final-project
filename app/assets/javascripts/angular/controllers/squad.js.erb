	// 			url: '/api/matches/' + $scope.matchId
	// 		}).success(function(resp){
	// 			check = resp.match.played;
	// 		})
	// 	}
	// };

	var waitingModal = function(){
		$uibModal.open({
			templateUrl: "<%= asset_path('main/waiting_modal.html') %>"
	    });
	};

	var init = function(){
		squadBuild();
	}

	init()
}])