app.controller('LoginCtrl', ['$scope','$auth', '$location','$state', function($scope,$auth,$location,$state){
	$scope.login = function () {
		$auth.submitLogin($scope.loginForm).
			then(function(resp) {
				// handle success response
				console.log(resp);
				// redirect back to root when registration succesfull 
				$state.go('welcome');
		}).
		catch(function(resp) {
			// handle error response
			console.log(resp);
		});
	};
}])